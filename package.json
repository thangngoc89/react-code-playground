{
  "name": "code-playground",
  "version": "0.1.2",
  "description": "A component for rendering HTML, CSS, Javascript code with editable source and live preview.",
  "main": "lib/index.js",
  "scripts": {
    "prebabelify": "npm run clean",
    "babelify": "NODE_ENV=lib babel --ignore __tests__ src --out-dir lib",
    "build": "DEBUG=playground:* NODE_ENV=production babel-node bin/build",
    "postbabelify": "DEBUG=playground:* babel-node bin/concatStyleSheet",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "clean": "rimraf lib dist webpack",
    "start": "DEBUG=playground:* babel-node bin/develop",
    "test": "NODE_ENV=test babel-node ./node_modules/karma/bin/karma start bin/karma.js",
    "test:ci": "npm test -- --browsers Firefox,Chrome_travis_ci",
    "test:dev": "npm test -- --watch",
    "lint": "eslint .",
    "deploy": "DEBUG=playground:* babel-node bin/deploy",
    "prepublish": "npm run babelify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thangngoc89/react-playground-component.git"
  },
  "keywords": [
    "playground",
    "react"
  ],
  "author": "Khoa Nguyen <hi@khoanguyen.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thangngoc89/react-playground-component/issues"
  },
  "homepage": "https://github.com/thangngoc89/react-playground-component#readme",
  "devDependencies": {
