    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-1": "^6.3.13",
    "babel-register": "^6.4.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "codecov.io": "^0.1.6",
    "codemirror": "^5.11.0",
    "connect-history-api-fallback": "^1.1.0",
    "css-loader": "^0.23.1",
